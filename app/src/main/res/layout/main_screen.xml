<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:text="Welcome User!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userView"
            android:textSize="24sp"
            android:textStyle="normal|italic"
            android:paddingLeft="10dp"
            android:layout_weight="1.00" />

        <Button
            android:text="Edit Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editButton" />
    </LinearLayout>

    <ListView
        android:id="@+id/moodList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:listSelector="@android:drawable/list_selector_background"
        android:layout_above="@+id/addMood" />

    <Button
        android:text="Add Mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addMood"
        android:background="@drawable/buttonstyle"
        android:layout_marginBottom="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button14"
            android:layout_weight="0.83"
            android:text="My Mood"
            android:padding="0dp" />

        <Button
            android:text="Friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/friends"
            android:layout_weight="1"
            android:padding="0dp" />

        <Button
            android:text="Map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/map"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:text="Filter Moods By:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="42dp"
        android:id="@+id/filterTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Past week:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weekFilter"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/filterTitle"
        android:layout_alignLeft="@+id/filterTitle"
        android:layout_alignStart="@+id/filterTitle" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weekBox"
        android:layout_alignBaseline="@+id/weekFilter"
        android:layout_alignBottom="@+id/weekFilter"
        android:layout_toRightOf="@+id/weekFilter"
        android:layout_toEndOf="@+id/weekFilter" />

    <TextView
        android:text="Emotion:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emotionFilter"
        android:layout_below="@+id/weekBox"
        android:layout_alignLeft="@+id/weekFilter"
        android:layout_alignStart="@+id/weekFilter" />

    <Spinner
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/sitSpinner"
        android:layout_below="@+id/weekFilter"
        android:layout_toRightOf="@+id/emotionFilter"
        android:layout_toEndOf="@+id/emotionFilter" />

    <TextView
        android:text="Reason Contains:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView17"
        android:layout_below="@+id/sitSpinner"
        android:layout_alignLeft="@+id/emotionFilter"
        android:layout_alignStart="@+id/emotionFilter" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/emotionFilter"
        android:layout_toRightOf="@+id/textView17"
        android:layout_toEndOf="@+id/textView17"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:id="@+id/reasonText"
        android:textSize="18sp" />

</RelativeLayout>