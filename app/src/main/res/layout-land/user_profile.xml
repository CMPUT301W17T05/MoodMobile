<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <TextView
        android:id="@+id/username"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:inputType="textPersonName"
        android:layout_marginStart="14dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignStart="@+id/saveProfile"
        android:layout_marginStart="15dp" />

    <EditText
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:inputType="textPersonName"
        android:layout_below="@+id/GuestLatestMoodTextview"
        android:layout_alignStart="@+id/username" />

    <TextView
        android:text="username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/profileImage"
        android:layout_alignStart="@+id/profileImage" />

    <TextView
        android:text="Gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/saveProfile"
        android:layout_marginEnd="34dp" />

    <TextView
        android:text="Nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/GuestLatestMoodTextview"
        android:layout_below="@+id/username"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/gender"
        android:layout_width="200dp"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/region" />

    <TextView
        android:text="Region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GuestProfileName"
        android:layout_below="@+id/gender"
        android:layout_alignEnd="@+id/textView8" />

    <Button
        android:id="@+id/saveProfile"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:onClick="saveProfile"
        android:text="SAVE"
        android:layout_marginEnd="88dp"
        android:layout_alignBottom="@+id/nickname"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="31dp"
        android:padding="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/edit_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/saveProfile"
        android:onClick="photo"
        android:text="Edit Photo" />


</RelativeLayout>